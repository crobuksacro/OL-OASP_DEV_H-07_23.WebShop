@model OL_OASP_DEV_H_07_23.WebShop.Shared.Models.Binding.AccountModels.ApplicationUserUpdateBinding

@{
    ViewData["Title"] = "MyProfile";
}

<h1>Moj profil</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MyProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            @if(Model.Address != null)
            {
                <input asp-for="Address.Id" hidden />
                <div class="form-group">

                 @*    @Html.LabelFor(y => y.Address.Country, new { @class = "control-label" })) *@
                    <label asp-for="Address.Country" class="control-label"></label>
                   @*  @Html.TextBoxFor(y => y.Address.Country, new { @class = "form-control" }) *@
                    <input asp-for="Address.Country" class="form-control" />

                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label"></label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Number" class="control-label"></label>
                    <input asp-for="Address.Number" class="form-control" />
                    <span asp-validation-for="Address.Number" class="text-danger"></span>
                </div>


            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
